@article{mccoy2019,
  title = {Right for the {{Wrong Reasons}}: {{Diagnosing Syntactic Heuristics}} in {{Natural Language Inference}}},
  shorttitle = {Right for the {{Wrong Reasons}}},
  author = {McCoy, R. Thomas and Pavlick, Ellie and Linzen, Tal},
